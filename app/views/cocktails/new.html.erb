<div class="container">
  <h1 class="text-center">New cocktail</h1>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for @cocktail do |f| %>

        <%= f.input :name %>
        <%= f.input :photo, as: :attachinary %>
        <%= f.button :submit, {class: "btn btn-primary"} %>

      <% end %>
    </div>
  </div>
</div>
